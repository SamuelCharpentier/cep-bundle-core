{
	"name": "@samuel-charpentier/cep-bundler-core",
	"version": "0.0.2",
	"author": "Samuel Charpentier",
	"description": "Core functionality for making bundler extensions to compile CEP",
	"main": "dist/cep-bundler-core.cjs.js",
	"types": "dist/index.d.ts",
	"module": "dist/cep-bundler-core.esm.js",
	"browser": "dist/cep-bundler-core.umd.js",
	"bin": {
		"cep-bundler-core": "./bin.js"
	},
	"files": [
		"dist/**/*",
		"bin.js"
	],
	"scripts": {
		"dev": "rollup --config --watch",
		"build": "rollup --config",
		"test": "jest"
	},
	"keywords": [
		"Adobe",
		"CEP",
		"ExtendScript",
		"TypeScript",
		"Bundler",
		"Extension",
		"Plugin"
	],
	"license": "MIT",
	"dependencies": {
		"fs-extra": "^10.0.0",
		"prettier": "^2.5.1",
		"sudo-prompt": "^9.2.1",
		"yargs": "^17.3.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.0.1",
		"@types/fs-extra": "^9.0.13",
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"builtin-modules": "^3.2.0",
		"eslint": "^8.6.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"jest": "^27.4.7",
		"locale-enum": "^1.1.1",
		"rollup": "^2.63.0",
		"rollup-plugin-node-externals": "^3.1.2",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-typescript2": "^0.31.1",
		"tape": "^5.4.0",
		"ts-jest": "^27.1.2",
		"typescript": "^4.5.4"
	},
	"jest": {
		"transform": {
			"^.+\\.(t|j)sx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"modulePathIgnorePatterns": [
			".*\\.config\\.(jsx?|tsx?)$"
		],
		"moduleNameMapper": {
			"@src/(.*)": "<rootDir>/src/$1",
			"@manifest/(.*)": "<rootDir>/src/lib/manifest/$1"
		},
		"globals": {
			"ts-jest": {
				"diagnostics": {
					"warnOnly": true
				}
			}
		}
	}
}
